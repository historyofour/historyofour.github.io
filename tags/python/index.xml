	loading=&#34;lazy&#34;
	
	
		class=&#34;gallery-image&#34; 
		data-flex-grow=&#34;350&#34;
		data-flex-basis=&#34;841px&#34;
	
&gt;&lt;/p&gt;
&lt;p&gt;&lt;img src=&#34;https://letere-gzj.github.io/hugo-stack/p/python/build-env/pip%E9%95%9C%E5%83%8F%E6%BA%90%E6%9B%B4%E6%94%B92.png&#34;
